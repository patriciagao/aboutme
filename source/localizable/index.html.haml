---
title: About me - Albert Einstein
---
.header
  .line
  .header-box.row
    .info.large-9.medium-8.columns
      .row
        .photo.large-3.medium-4.medium-uncentered.small-centered.columns
          = image_tag "aboutme_foto.jpg"
        .title.large-9.medium-8.columns
          .section-title
            %p
              %i.icon.icon-clipboard
              = t(:basic_and_contact_title)
            .row
              %h1.name.large-5.columns
                = t(:name)
              %h2.subtitle.large-5.columns
                = t(:subtitle)
        .description.large-9.columns
          %p
            = t(:short_description)
    .contact.large-3.medium-4.columns
      %ul.contacts
        - data.contact.each do |contact_way|
          %li
            %span.icon{:class => contact_way.icon_class}
            - if contact_way.is_link
              = link_to contact_way.href, target: "_blank" do
                =contact_way.text
            - else
              = contact_way.text

.content.row
  .large-12.medium-6.small-12.columns
    .section-title
      %p
        %i.icon.icon-briefcase
        = t(:education_and_work_title)
    .timeline-wrapper
      %ul.timeline
        - data.education_and_work.each do |achivement|
          %li.achivement
            .achivement-icon
            .achivement-info{class: achivement.type }
              .row
                .small-12.columns
                  %h3
                    = t(achivement.title)
                .date.small-12.columns
                  %p
                    = "#{t(achivement.start_date)} - #{t(achivement.end_date)}"
                .place.small-12.columns
                  %p
                    = t(achivement.place)

  .large-7.medium-6.columns
    .row
      .section-title.large-12.columns
        %p
          %i.icon.icon-terminal
          = t(:knowledges)
    .row
      .medium-12.columns
        .knowledges-wrap
          #knowledges
          .more-knowledges
            %p
              ="#{t(".more")} #{i18n_map(data.more_knowledges, :name).to_sentence}."

  .large-5.medium-6.columns.languages-section
    .row
      .section-title.large-12.columns
        %p
          %i.icon.icon-bulhorn
          = t(:languages)
    .row
      .languages.small-12.columns
        .language-wrap
          -data.languages.each do |language|
            %div{class: "language size-#{language.height} icon #{language.icon}"}
              %span
                = language.text

  .large-5.medium-12.columns
    .row
      .section-title.large-12.columns
        %p
          %i.icon.icon-thumbup
          = t(:interests)
    .row.interests
      -data.interests.each do |interest|
        .large-6.medium-3.small-6.columns
          .interest
            %div{class: "icon #{interest.icon}"}
            %p
              = t(interest.name)
